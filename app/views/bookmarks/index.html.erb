<h1>Display the list</h1>
<ul>
  <% @lists.each do |list| %>
  <li><%= link_to list.name, list_path(list) %>
      | <%= link_to "Edit this list", edit_list_path(list) %>
      | <%= link_to "Delete #{list.name}",
            list_path(list),
            method: :delete,
            data: { confirm: "Are you sure?" } %></li>
  <%end%>
</ul>

<% raise  %>

<%= link_to "Add a new list", new_list_path %>
