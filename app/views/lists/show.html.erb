<h2><%= @list.name %></h2>

<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
<%= link_to "Edit this list", edit_list_path(@list) %> <br>
<%= link_to "Delete #{@list.name}",
          list_path(@list),
          method: :delete,
          data: { confirm: "Are you sure?" } %> <br>
<%= link_to "Back to Index", lists_path %>

<ul>
  <% @bookmarks.each do |bookmark| %>
  <li><%= "#{bookmark.comment} (LIST:#{bookmark.list_id}, MOVIE:#{bookmark.movie_id})" %>
      | <%= link_to "Delete this bookmark",
            bookmark_path(bookmark),
            method: :delete,
            data: { confirm: "Are you sure?" } %></li>
  <%end%>
</ul>

<%= link_to "Add a new bookmark", new_list_bookmark_path(@list) %>
